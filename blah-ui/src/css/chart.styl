.x-axis .tick line,
.y-axis .tick line
  fill: none
  stroke: base0
  stroke-width: 1

.y-axis .tick line
  opacity 0.2

.x-axis .domain,
.y-axis .domain
  fill: none
  stroke: base0
  stroke-width: 1

.x-axis .tick text,
.y-axis .tick text
  font-size: 10px
  fill: base0

.line
  stroke: red
  stroke-width: 3
  fill: none

.bar
  fill: red

.arc text
  font-size: 10px
  text-anchor: middle
  fill base3

colorize(letter, color)
  .arc-{letter}
    fill color

  .label-{letter}
    background color

