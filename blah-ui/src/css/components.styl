.dropdown
  .dropdown-menu
    position absolute
    display none
    min-width 200px
    margin-top 10px
    background white
  .dropdown-item
    display block
    padding 10px

.nav
  background grey-background
  .nav-item
    background grey-background
    text-transform uppercase
    border 0
  .nav-item:hover
    background-color darken(grey-background, 2%)
  .divider
    border-bottom 1px solid darken(grey-background, 5%)
  .dropdown-menu
    padding-right 0
  .dropdown-item
    background none

  @media screen and (max-width: tablet - 1px)
    .nav-menu
      position absolute
      display none
      left 0
      right 0
      top 100%
      box-shadow 20px 0 0 grey-background, -20px 0 0 grey-background
    .dropdown .dropdown-toggle
      display none
    .dropdown .dropdown-menu
      position relative
      display block
      margin-top 0
      background grey-background
