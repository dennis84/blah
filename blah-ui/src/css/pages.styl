.segmentation .chart
  height 500px

.funnel .chart
  height 500px

.world-map
  path, path:hover
    stroke base2 !important
    fill base1 !important
  circle
    stroke none !important
    fill cyan

.people-list
  margin-top 50px
  .card-content
    padding 10px
    .media
      .subtitle
        margin-bottom 2px
      margin-bottom 20px
  .list-item
    padding 5px 0
  .tag.is-collection-pageviews
    background cyan
    color base3
  .tag.is-collection-registrations
    background teal
    color base3
  .tag.is-collection-purchases
    background deepOrange

.autoscale
  .arc-cpu-usage.arc-a
    fill blue
  .arc-cpu-usage.arc-b
    fill base1
  .mem-cpu-usage.arc-a
    fill cyan
  .mem-cpu-usage.arc-b
    fill base1

  .app
    position relative
    border-radius 100px
    width 100%
    background base2
  .app:before
    content ''
    padding-top 100%
    display block
  .app.is-empty
    background base1

  .app .chart
    position absolute
    top 0
    left 0
    bottom 0
    right 0

  .app .content
    position absolute
    top 0
    left 0
    bottom 0
    right 0
