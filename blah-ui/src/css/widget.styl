@import 'nib'

.widgets
  height: 100%

.widget
  width: 320px
  height: 320px
  margin-right: 10px
  margin-bottom: 10px
  padding: 10px
  float: left
  background: base3
  box-shadow: 0 1px 2px #ddd
  h3
    padding: 0
    margin: 0
    margin-bottom: 20px
    font-weight: 200
    font-size: 32px
    text-align: center

  &.red
    background: red
    color: base3
  &.cyan
    background: cyan
    color: base3

.widget-count
  .count
    font-weight: 200
    font-size: 64px
    text-align: center
  .page
    text-align: center

.widget-count.dark
  background: #666
  color: #fff

.widget-bar
  height: auto
  .chart
    height: 300px

.widget-pie
  height: auto
  .chart
    width: 300px
    height: 300px

.widget-recommendations
  height: auto
  .recommendations
    margin-top: 20px
