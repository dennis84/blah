@import 'nib'

.widgets
  height: 100%

.widget
  width: 320px
  height: 320px
  margin-right: 10px
  margin-bottom: 10px
  padding: 10px
  float: left
  background: base3
  box-shadow: 0 1px 1px rgba(0,0,0,0.2)

  h3
    padding: 0
    margin: 10px
    margin-bottom: 20px
    font-weight: 200
    font-size: 32px
    text-align: center

  &.red
    background: red
    color: base3

  &.size-2of3
    width: 650px

.widget-count
  .count
    font-weight: 200
    font-size: 64px
    text-align: center
  .page
    text-align: center

.widget-bar
  height: auto
  .chart
    height: 300px

.widget-pie
  height: auto
  .chart
    width: 300px
    height: 300px

.widget-recommendations
  height: auto
  .recommendations
    margin-top: 20px
