@import 'nib'

.widgets
  height: 100%

.widget
  width: 320px
  height: 320px
  margin-right: 10px
  margin-bottom: 10px
  padding: 10px
  float: left
  background: base3
  box-shadow: 0 1px 1px rgba(0,0,0,0.1)

  h3
    padding: 0
    margin: 10px
    margin-bottom: 20px
    font-weight: 200
    font-size: 32px
    text-align: center

@media (min-width: 650px)
  .widget.size-2of3
    width: 650px

// --------------------------------------------------------------
// Widget Count
// --------------------------------------------------------------
.widget-count
  .value
    font-weight: 200
    font-size: 64px
    text-align: center
  .title
    text-align: center

// --------------------------------------------------------------
// Widget Diff
// --------------------------------------------------------------
.widget-diff
  position: relative
  .value
    font-weight: 200
    font-size: 64px
    text-align: center
  .title
    text-align: center
  .has-progress-bar
    .title
      padding: 0 50px
  .circle-progress-bar
    position: absolute
    top: 10px
    left: 10px
    width: 300px
    height: 300px
    colorize('b', base2)

// --------------------------------------------------------------
// Widget Sum
// --------------------------------------------------------------
.widget-sum
  .value
    font-weight: 800
    font-size: 48px
    text-align: center
  .title
    text-align: center

// --------------------------------------------------------------
// Widget Users
// --------------------------------------------------------------
.widget-users
  .value
    font-weight: 200
    font-size: 64px
    text-align: center
  .title
    text-align: center

// --------------------------------------------------------------
// Widget Bar
// --------------------------------------------------------------
.widget-bar
  height: auto
  .chart
    height: 300px

// --------------------------------------------------------------
// Widget Pie
// --------------------------------------------------------------
.widget-pie
  height: auto
  .chart
    width: 300px
    height: 300px
  .labels
    text-align: center
    margin-bottom: 10px
    .label
      display: inline-block
      margin: 2px

// --------------------------------------------------------------
// Widget Recommendations
// --------------------------------------------------------------
.widget-recommendations
  height: auto
  .recommendations
    margin-top: 20px
    .recommendation
      margin: 2px 0

// --------------------------------------------------------------
// Widget Funnel
// --------------------------------------------------------------
.widget-funnel
  height: auto
  .chart
    width: 300px
    height: 300px
