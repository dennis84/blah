{
  "id": "api",
  "cpus": 0.1,
  "mem": 512.0,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "blah/api:0.1.0",
      "network": "BRIDGE",
      "portMappings": [
        {"containerPort": 8000, "hostPort": 0, "servicePort": 8000, "protocol": "tcp"}
      ]
    }
  },
  "env": {
    "KAFKA_URL": "$BLAH_HOST:31000",
    "HADOOP_URL": "hdfs://namenode.marathon.mesos:8020"
  }
}
