{
  "id": "api",
  "cpus": 0.1,
  "mem": 512.0,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "blah/api:0.1.0",
      "network": "BRIDGE",
      "portMappings": [
        {"containerPort": 8000, "hostPort": 0, "servicePort": 8000, "protocol": "tcp"}
      ]
    }
  },
  "env": {
    "KAFKA_URL": "$BLAH_HOST:31000",
    "HADOOP_URL": "hdfs://$BLAH_HOST:8020"
  },
  "labels":{
    "AUTOSCALE_MAX_INSTANCES": "10",
    "AUTOSCALE_MEM_PERCENT": "80",
    "AUTOSCALE_CPU_PERCENT": "80",
    "HAPROXY_GROUP": "external",
    "HAPROXY_0_VHOST": "api.blah.local",
    "HAPROXY_0_BACKEND_HTTP_HEALTHCHECK_OPTIONS": "  option  httpchk GET {healthCheckPath} HTTP/1.1\\r\\nHost:\\ api.blah.local\n  timeout check {healthCheckTimeoutSeconds}s\n"
  },
  "healthChecks": [{
    "protocol": "HTTP",
    "path": "/",
    "intervalSeconds": 10
  }]
}
