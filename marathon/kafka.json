{
  "id": "kafka",
  "cpus": 0.1,
  "mem": 128.0,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "greytip/kafka",
      "network": "BRIDGE",
      "portMappings": [
        {"containerPort": 9092, "hostPort": 0, "servicePort": 9092, "protocol": "tcp"}
      ]
    }
  },
  "env": {
    "ZOOKEEPER_CONNECTION_STRING": "zookeeper.marathon.mesos:2181",
    "KAFKA_ADVERTISED_HOST_NAME": "kafka.marathon.mesos"
  }
}
