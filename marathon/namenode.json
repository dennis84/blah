{
  "id": "namenode",
  "cpus": 0.1,
  "mem": 128.0,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "blah/hadoop-master",
      "network": "BRIDGE",
      "portMappings": [
        {"containerPort": 8020, "hostPort": 0, "servicePort": 8020, "protocol": "tcp"},
        {"containerPort": 50070, "hostPort": 0, "servicePort": 50070, "protocol": "tcp"}
      ],
      "parameters": [{
        "key": "volume",
        "value": "hadoop_name:/data/dfs/name"
      }]
    }
  }
}
