{
  "id": "user-streaming",
  "cpus": 0.5,
  "mem": 512.0,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "blah/algo:0.1.0",
      "network": "BRIDGE"
    }
  },
  "args": ["user-streaming"],
  "env": {
    "KAFKA_URL": "$BLAH_HOST:31000",
    "ZOOKEEPER_URL": "$BLAH_HOST:2181",
    "HADOOP_URL": "hdfs://namenode.marathon.mesos:8020",
    "ELASTICSEARCH_URL": "elasticsearch.marathon.mesos:9200",
    "SPARK_MASTER": "mesos://zk://$BLAH_HOST:2181/mesos",
    "STREAMING_BATCH_INTERVAL": "1"
  }
}
